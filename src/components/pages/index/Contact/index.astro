import Section from "../../../Section.astro";
import Map from "../../../Map.astro";
---

<Section id="contact" padding="8rem">
    <div class="container">
        <p>Ready to embark on a lifetime of adventure?</p>
        <h2>Contact Us</h2>
        <div id="contact-details">
            <div><span class="bold">Mobile: </span>7042065607</div>
            <div><span class="bold">Email: </span>admin@para-karam.com</div>
            <div>
                <span class="bold">Address: </span>309, Shopping Square 1,
                Sector-D, Sushant Golf City, Lucknow, Uttar Pradesh
            </div>
