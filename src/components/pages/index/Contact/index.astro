<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .bold {
        font-weight: bold;
    }

    #contact-details {
        display: flex;
        flex-direction: column;
        margin-top: 2rem;
    }
</style>
