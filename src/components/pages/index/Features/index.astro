---
// Components
import Section from "../../../Section.astro";
import Item from "./Item.astro";
---

<Section id="features" backgroundColor="#000" color="white" padding="8rem">
    <ul>
        <Item text="Adventure filled activities" />
        <Item text="Unique and thrilling experiences" />
        <Item text="Specialist Guides" />
        <Item text="Expand your horizons" />
        <Item text="Build physical and mental fitness" />
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        row-gap: 6rem;
    }

    @media screen and (width < 480px) {
        ul {
            flex-direction: column;
            row-gap: 2rem;
            text-align: center;
        }
    }

    li {
        list-style: none;
    }
</style>
