---
// Components
import Item from "./Item.astro";
---

<section id="features" class="contained">
    <ul>
        <Item text="Adventure filled activities" />
        <Item text="Unique and thrilling experiences" />
        <Item text="Specialist Guides" />
        <Item text="Expand your horizons" />
        <Item text="Build physical and mental fitness" />
    </ul>
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-block: 8rem;
        background-color: #000;
        color: whitesmoke;
    }

    ul {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        row-gap: 6rem;
        text-align: center;
    }

    @media screen and (width < 480px) {
        section {
            padding-block: 6rem;
        }

        ul {
            flex-direction: column;
            row-gap: 4rem;
        }
    }
</style>
