---
// Type
import type { GetImageResult } from "astro";

// Props
interface Props {
    id: string;
    fullname: string;
    highlights: string[];
    backgroundImage: GetImageResult;
}
const { id, fullname, highlights, backgroundImage } = Astro.props;
---

<div
    class="member animate"
    data-id={id}
    style={{
        backgroundImage: `url("${backgroundImage.src}")`,
    }}
>
    <h2>{fullname}</h2>
    <ul>
        {highlights.map((x) => <li>{x}</li>)}
    </ul>
</div>

<style>
    .member {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        height: 70dvh;

        overflow: hidden;
        border-radius: 12px;
        background-size: cover;

        box-shadow: 6px 6px 8px 8px rgba(0, 0, 0, 0.25);

        transition: scale var(--transition-duration) ease-out;
    }

    .member:hover {
        scale: 1.025;
    }

    h2 {
        width: 100%;
        font-size: var(--font-size);
        padding-block: 1rem;
        text-align: center;
        background-image: linear-gradient(#000, transparent);
    }

    ul {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 0.5rem;

        padding-inline: 1rem;
        text-align: center;

        list-style-type: none;

        background-image: linear-gradient(transparent, #000);
        padding-bottom: 2rem;
    }
</style>
