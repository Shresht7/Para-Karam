---
// Library
import { getImage } from "astro:assets";

// Assets
import ramesh from "@assets/images/ramesh.jpg";
import rajneesh from "@assets/images/rajneesh.jpg";
import sanjay from "@assets/images/sanjay.jpg";

const optimizedRamesh = await getImage({
    src: ramesh,
    width: 560,
    loading: "eager",
    format: "avif",
    fallbackFormat: "webp",
    quality: "mid",
});

const optimizedRajneesh = await getImage({
    src: rajneesh,
    width: 560,
    loading: "eager",
    format: "avif",
    fallbackFormat: "webp",
    quality: "mid",
});

const optimizedSanjay = await getImage({
    src: sanjay,
    width: 560,
    loading: "eager",
    format: "avif",
    fallbackFormat: "webp",
    quality: "mid",
});
---

<section>
    <div id="team">
        <div
            class="member ramesh animate"
            style={{ backgroundImage: `url("${optimizedRamesh.src}")` }}
        >
            <h2>Group Captain Ramesh Mishra VM (Retd.)</h2>
            <ul>
                <li>
                    Parachute Jump Instructor: 2485 Jumps from 16 aircrafts and
                    helicopters
                </li>
                <li>
                    The first person to jump from 30,000 feet AGL with the
                    indigenous CFF system
                </li>
                <li>Adventure Sports Trainer</li>
            </ul>
        </div>
        <div
            class="member rajneesh animate"
            style={{ backgroundImage: `url("${optimizedRajneesh.src}")` }}
        >
            <h2>Wing Commander Rajneesh Seth (Retd.)</h2>
            <ul>
                <li>Businessman</li>
                <li>Supply Chain Management</li>
                <li>Quality-Assurance Consultant</li>
            </ul>
        </div>
        <div
            class="member sanjay animate"
            style={{ backgroundImage: `url("${optimizedSanjay.src}")` }}
        >
            <h2>Group Captain (Dr.) Sanjay Srivastav (Retd.)</h2>
            <ul>
                <li>Alumni of IIM Lucknow</li>
                <li>Instructor at Indira Gandhi Rashtriya Uran Academy</li>
                <li>AI and Data-Science Consultant</li>
            </ul>
        </div>
    </div>
</section>

<style>
    section {
        padding: 6rem;
    }

    #team {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        color: var(--color-white);
    }

    .member {
        width: 100%;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        height: 70dvh;
        background-color: #333;
        border-radius: 8px;
        background-position: center;
        background-size: cover;
        transition: scale 125ms ease-out;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 4px 4px 2px 2px rgba(0, 0, 0, 0.25);
        animation-name: fade, fly;
        animation-duration: 1000ms;
        animation-timing-function: ease-in-out;
    }

    .member:hover {
        scale: 1.025;
    }

    .ramesh {
        --fly-from: -100px 0;
    }

    .rajneesh {
        --fly-from: 0 0;
    }

    .sanjay {
        background-position: 0%;
        --fly-from: 100px 0;
    }

    h2 {
        width: 100%;
        font-size: var(--font-size);
        padding-block: 1rem;
        text-align: center;
        background-image: linear-gradient(#000, transparent);
    }

    ul {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        gap: 0.5rem;
        padding-inline: 1rem;
        list-style-type: none;
        text-align: center;
        background-image: linear-gradient(transparent, #000);
        padding-bottom: 2rem;
    }

    @media screen and (width <= 768px) {
        section {
            padding: 4rem 0.5rem;
        }

        #team {
            flex-direction: column;
            padding-inline: 1rem;
            gap: 1.5rem;
        }

        .member {
            animation-duration: 500ms;
            min-height: 25dvh;
            --fly-from: 0 50px;
        }

        ul {
            display: none;
        }

        .rajneesh {
            background-position-y: 0%;
        }

        .member:nth-child(1) {
            animation-delay: 500ms;
        }

        .member:nth-child(2) {
            animation-delay: 650ms;
        }

        .member:nth-child(3) {
            animation-delay: 800ms;
        }
    }
</style>
