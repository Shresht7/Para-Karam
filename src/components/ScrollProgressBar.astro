<div id="scroll-progress"></div>

<style>
	#scroll-progress {
		position: fixed;
		top: 0;
		left: 0;
		height:3px;
		width: 100%;
		z-index: 100;

		background-color: var(--color-white);

		animation: scrollProgress auto linear;
		animation-timeline: scroll(root);
