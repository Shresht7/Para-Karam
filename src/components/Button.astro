---
// Props
interface Props {
    variant?: "solid" | "outline";
    size?: "small" | "large";
}
const { variant, size } = Astro.props;
---

<button class:list={[variant, size]}>
    <slot />
</button>

<style>
    button {
        padding: 0.5rem 1rem;
        border-radius: 100px;
    }

    .solid {
        background-color: whitesmoke;
        color: black;
        border: 2px solid whitesmoke;
    }

    .outline {
        background-color: transparent;
        color: whitesmoke;
        border: 2px solid whitesmoke;
    }

    .small {
        font-size: 0.8rem;
    }

    .large {
        font-size: 1.25rem;
        padding: 0.75rem 1.25rem;
    }
</style>
