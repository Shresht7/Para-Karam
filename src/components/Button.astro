---
// Props
interface Props {
    id?: string;
    color?: "white" | "blue";
    variant?: "solid" | "outline";
    size?: "small" | "large";
}
const { id, size } = Astro.props;
const variant = Astro.props.variant ?? "solid";
const color = Astro.props.color ?? "blue";
---

<button id={id} type="button" class:list={[color, variant, size]}>
    <slot />
</button>

<style>
    button {
        padding: 0.5rem 1rem;
        border-radius: 100px;
        transition: transform 100ms ease-in-out, outline 100ms ease-out;
        outline: 0px solid var(--color-white);
    }

    button:hover {
        transform: scale(1.05);
        outline-width: 3px;
        outline-offset: 4px;
    }

    .white {
        --background-color: var(--color-white);
        --color: var(--color-black);
    }

    .blue {
        --background-color: var(--color-blue);
        --color: var(--color-white);
    }

    .solid {
        background-color: var(--background-color);
        color: var(--color);
        border: 2px solid var(--background-color);
    }

    .outline {
        background-color: transparent;
        color: var(--color);
        border: 2px solid var(--color);
    }

    .small {
        font-size: 0.8rem;
    }

    .large {
        font-size: 1.25rem;
        padding: 0.75rem 2rem;
    }
</style>
