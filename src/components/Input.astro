---
// Props
interface Props {
    name: string;
    label: string;
    type?: any;
}

const { name, label, type } = Astro.props;
---

<div>
    <label for={name}>{label}</label>
    <input name={name} type={type} />
</div>

<style>
    div {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 0.25rem;
    }

    label {
        margin-left: 12px;
    }

    input {
        width: 100%;
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-black);
        border-radius: 4px;
    }

    input:focus {
        border-color: var(--color-blue);
        outline-color: var(--color-blue);
    }
</style>
