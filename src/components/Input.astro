---
// Props
interface Props {
    name: string;
    label: string;
    type?: any;
    isTextArea?: boolean;
    required?: boolean;
}

const { name, label, type, isTextArea, required } = Astro.props;
---

<div class="animate view-timeline">
    <label for={name}>
        {required ? `${label}*` : `${label} (Optional)`}
    </label>
    {
        !isTextArea ? (
            <input id={name} name={name} type={type} required={required} />
        ) : (
            <textarea name={name} />
        )
    }
</div>

<style>
    div {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 0.25rem;
        animation-name: fade, fly;
        --fly-from: 25px 0;
    }

    label {
        margin-left: 12px;
    }

    input,
    textarea {
        width: 100%;
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-black);
        border-radius: 4px;
        resize: vertical;
    }

    input:focus {
        border-color: var(--color-blue);
        outline-color: var(--color-blue);
    }
</style>
