---
// Components
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
---

<header>
    <div class="contained">
        <Logo />
        <Navigation />
    </div>
</header>

<style>
    header {
        --blur-intensity: 20px;
        position: fixed;
        width: 100%;
        padding: 1rem 0rem;
        color: whitesmoke;
        background-color: rgba(255, 255, 255, 33%);
        backdrop-filter: blur(var(--blur-intensity));
    }

    div {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
</style>
