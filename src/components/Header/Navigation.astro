---
const routes = [
    ["Home", "/"],
    ["Activities", "/#activities"],
    ["Gallery", "/gallery"],
    ["Contact Us", "/#contact"],
    ["Our Team", "/our-team"],
];
---

<nav>
    <div id="menu-icon">&#9776;</div>
    <ul id="nav-links">
        {
            routes.map(([text, route], idx) => (
                <li
                    class="animate fly"
                    style={{
                        "--animation-order": idx + 1,
                    }}
                >
                    <a href={route}>{text}</a>
                </li>
            ))
        }
    </ul>
</nav>

<script>
    const navLinks = document.getElementById("nav-links")!;
    const menuIcon = document.getElementById("menu-icon")!;
    const navElements = document.querySelectorAll("#nav-links li");
    const cta = document.getElementById("call-to-action")!;

    function toggleMenu() {
        if (navLinks.classList.contains("open")) {
            navLinks.classList.remove("open");
            menuIcon.innerHTML = "&#9776;";
            navElements.forEach((e) => e.classList.add("animate", "fly"));
            cta.style.display = "block";
        } else {
            navLinks.classList.add("open");
            menuIcon.innerHTML = "&#10006;";
            navElements.forEach((e) => e.classList.remove("animate", "fly"));
            cta.style.display = "none";
        }
    }

    menuIcon.addEventListener("click", toggleMenu);
</script>

<style>
    nav ul {
        width: 40dvw;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    #menu-icon {
        display: none;
        font-size: var(--font-size-xl);
        cursor: pointer;
    }

    @media screen and (width <= 900px) {
        #menu-icon {
            display: block;
        }

        nav ul {
            flex-direction: column;
            justify-content: center;
            position: absolute;
            top: var(--header-height);
            left: 0;
            height: calc(100dvh - var(--header-height));
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            padding: 2rem;
        }

        nav ul.open {
            height: 100dvh;
            display: flex;
            justify-content: space-evenly;
        }

        nav li {
            width: 100%;
            text-align: center;
            font-size: var(--font-size-lg);
        }
    }

    nav li {
        list-style: none;
        cursor: pointer;
        font-weight: 600;

        --fly-from: 0 -100px;
        animation-duration: 500ms;
        animation-timing-function: ease-in-out;
        --animation-delay-base: 500ms;
        --animation-delay-slope: 50ms;

        padding: 0.125rem 0.5rem;
        border-radius: 4px;
    }

    nav li:hover,
    nav li:has(a:focus) {
        background-color: var(--color-white);
        color: var(--color-black);
    }

    a {
        text-decoration: none;
        text-wrap: nowrap;
        color: inherit;

        &:focus {
            outline: none;
        }
    }
</style>
