---
// Components
import Logo from "@components/Logo.astro";
import Contact from "./Contact.astro";

// Assets
import bgImage from "@assets/images/footer.jpg";
---

<!-- Photo by <a href="https://unsplash.com/@chrisk91?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Christian J.</a> on <a href="https://unsplash.com/photos/a-person-is-parasailing-in-the-sky-at-sunset-Ejlj69BGyoE?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Unsplash</a>
   -->
<footer style={`background-image: url("${bgImage.src}")`}>
    <div id="footer-info">
        <Logo />
        <Contact />
    </div>
    <div id="copyright">Para-Karam Â© Copyright YYYY. All Rights Reserved.</div>
</footer>

<script>
    const copyright = document.getElementById("copyright")!;
    copyright.innerText = copyright.innerText.replace(
        "YYYY",
        new Date().getFullYear().toString(),
    );
</script>

<style>
    footer {
        background-size: cover;
        background-position-y: 40%;
        padding-block: 4rem;

        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;

        color: var(--color-white);

        container-type: inline-size;
    }

    #footer-info {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-content: center;
        padding: 12rem 4rem;
    }

    #copyright {
        color: var(--color-white);
        text-align: center;
    }

    @media screen and (width < 480px) {
        footer {
            background-position-x: 55%;
        }

        #footer-info {
            flex-direction: column;
            gap: 4rem;
        }
    }
</style>
